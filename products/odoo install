sudo -u postgres psql
psql -U postgres -d odoo_db
CREATE USER odoo18 WITH PASSWORD 'admin123';
CREATE DATABASE odoo_db WITH OWNER odoo18;
GRANT ALL PRIVILEGES ON DATABASE odoo_db TO odoo18;
\q
exit

----------------------
-- PostgreSQL terminalına keç
sudo -u postgres psql

-- Mövcud user-ları yoxla
\du

-- Mövcud database-ləri yoxla
\l

-- Database-i sil
DROP DATABASE IF EXISTS odoo_db;

-- İstifadəçini sil
DROP USER IF EXISTS odoo;

-- Parolu dəyişmək (qeyd linux user odoo ile ayaqa qalxirsa ad da user adi da odoo olmalidi)
ALTER USER odoo WITH PASSWORD '123456';

-- və yaxud sudo nano /etc/postgresql/16/main/pg_hba.conf faylinda all olan yerde peer et md5

-- İstifadəçini yarat:
CREATE USER odoo WITH PASSWORD '123456';

-- Database yarat
CREATE DATABASE odoo_db WITH OWNER odoo;

-- Database üzərində bütün icazələri ver
GRANT ALL PRIVILEGES ON DATABASE odoo_db TO odoo;

-- Test etmək
psql -U odoo -d odoo_db -h localhost -W
----------------------
sudo nano /etc/odoo.conf

[options]
; PostgreSQL parametrləri
db_host = False
db_port = False
db_user = odoo
db_password = 123456
db_name = odoo_db

; Odoo admin parolu
admin_passwd = admin123

; Tövsiyə olunan əlavə parametrlər
default_productivity_apps = True


;addons_path = /usr/lib/python3/dist-packages/odoo/addons,/home/odoo/custom_addons
addons_path = /usr/lib/python3/dist-packages/odoo/addons
logfile = /var/log/odoo.log
